<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    android:orientation="vertical">

    <TextView
        style="@style/title_fragment"
        android:text="@string/editor_route" />


    <EditText
        android:id="@+id/route_name"
        style="@style/edit_data"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="15dp"
        android:gravity="left|center"
        android:hint="@string/route_name"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/location_on"
            android:gravity="center" />

        <EditText
            android:id="@+id/departure_point"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/very_grey_text"
            android:fontFamily="@font/moscowsansregular"
            android:hint="@string/departure"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_text"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/location_on_orange" />

        <EditText
            android:id="@+id/arrive_point"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center|top"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/very_grey_text"
            android:fontFamily="@font/moscowsansregular"
            android:hint="@string/arrival"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_text"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </FrameLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"

        android:layout_marginTop="100dp"
        android:layout_marginBottom="180dp"
        android:text="@string/map"
        android:textColor="@color/nedodel_nado_pravit"
        android:textSize="30sp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="120dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/text_for_stats"
            android:text="@string/length"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/route_length"
            style="@style/text_for_stats"
            android:text="@string/none_hint"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/text_for_stats"
            android:text="@string/complexity"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/route_complexity"
            style="@style/text_for_stats"
            android:text="@string/none_hint"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/grey_button"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/orange_button"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/save" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>