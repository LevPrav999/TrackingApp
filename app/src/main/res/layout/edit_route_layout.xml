<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/back"
    android:orientation="vertical">

    <TextView
        style="@style/title_fragment"
        android:text="Редактор маршута"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:background="@drawable/location_on"/>

        <EditText
            android:id="@+id/departure_point"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/very_grey_text"
            android:fontFamily="@font/moscowsansregular"
            android:layout_gravity="center|top"
            android:hint="Отправление"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_text"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/location_on_orange"/>

        <EditText
            android:id="@+id/arrive_point"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/very_grey_text"
            android:fontFamily="@font/moscowsansregular"
            android:layout_gravity="center|top"
            android:hint="Прибытие"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_text"
            android:textSize="18sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </FrameLayout>


    <TextView
        android:layout_marginBottom="180dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="bottom|center"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Map"
        android:textSize="30dp"
        android:textColor="@color/nedodel_nado_pravit"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="120dp"
        android:orientation="horizontal">
        <TextView
            style="@style/text_for_stats"
            android:textSize="20sp"
            android:text="Длина:"
            tools:ignore="MissingConstraints" />
        <TextView
            style="@style/text_for_stats"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"
            android:text="0"
            android:gravity="right"
            android:id="@+id/route_length"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="90dp"
        android:orientation="horizontal">
        <TextView
            style="@style/text_for_stats"
            android:textSize="20sp"
            android:text="Сложность:"
            tools:ignore="MissingConstraints" />
        <TextView
            style="@style/text_for_stats"
            android:textSize="25sp"
            app:layout_constraintRight_toRightOf="parent"
            android:text="0"
            android:gravity="right"
            android:id="@+id/route_complexity"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Отмена"
            style="@style/grey_button"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/orange_button"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Сохранить" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>