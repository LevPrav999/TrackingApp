<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Давайте заполним ваши данные"
        android:textAlignment="center"
        android:textColor="#C1876B"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/registerHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.755" />

    <EditText
        android:id="@+id/registerHeight"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="256dp"
        android:background="@color/dark_grey"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="Рост"
        android:inputType="phone"
        android:minHeight="48dp"
        android:textColor="#C1876B"
        android:textColorHint="#C1876B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/registerWeight"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="34dp"
        android:background="@color/dark_grey"
        android:ems="10"
        android:foregroundTint="#FFFFFF"
        android:hint="Вес"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColor="#C1876B"
        android:textColorHint="#C1876B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerHeight" />


    <Spinner
        android:id="@+id/registerLevelSpinner"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerWeight" />

    <Spinner
        android:id="@+id/registerHealthSpinner"
        android:layout_width="216dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerLevelSpinner" />

    <Button
        android:id="@+id/sendFormButton"
        android:layout_width="121dp"
        android:layout_height="38dp"
        android:layout_marginTop="84dp"
        android:background="@color/dark_orange"
        android:text="Готово"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerHealthSpinner" />


</androidx.constraintlayout.widget.ConstraintLayout>