<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="title_fragment" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity"> top|left</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>


    <style name="orange_button" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/orange_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="grey_button" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/grey_button</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>